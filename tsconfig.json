{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "lib": [
      "ES2020"
    ],
    "typeRoots": [
      "./typings",
      "./miniprogram/pages"
    ],
    "paths": {
      "tdesign-miniprogram/*": [
        "./miniprogram/miniprogram_npm/tdesign-miniprogram/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./miniprogram/pages/**/index.d.ts",
    "./miniprogram/pages/**/index.ts",
    "./miniprogram/sub_modules_a/pages/**/index.d.ts",
    "./miniprogram/sub_modules_b/pages/**/index.d.ts",
    "./miniprogram/sub_modules_a/pages/**/index.ts",
    "./miniprogram/sub_modules_b/pages/**/index.ts"
  ],
  "exclude": [
    "node_modules",
    "./miniprogram/miniprogram_npm/tdesign-miniprogram/*",
    "towxml"
  ],
  "compileOnSave": true,
}